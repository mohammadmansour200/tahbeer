<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".TahbeerApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Tahbeer">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Tahbeer">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <!-- Sharing Intent filter -->
            <intent-filter>
                <action android:name="android.intent.action.SEND" />

                <data android:mimeType="video/*" />
                <data android:mimeType="audio/mpeg" />
                <data android:mimeType="audio/aac" />
                <data android:mimeType="audio/oga" />
                <data android:mimeType="audio/ogg" />
                <data android:mimeType="audio/opus" />
                <data android:mimeType="audio/mp4" />
                <data android:mimeType="audio/x-m4a" />
                <data android:mimeType="audio/mp3" />
                <data android:mimeType="text/vtt" />
                <data android:mimeType="application/x-srt" />
                <data android:mimeType="text/plain" />
                <data android:mimeType="application/x-subrip" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- Internalization Service -->
        <service
            android:name="androidx.appcompat.app.AppLocalesMetadataHolderService"
            android:enabled="false"
            android:exported="false">
            <meta-data
                android:name="autoStoreLocales"
                android:value="true" />
        </service>
    </application>

</manifest>